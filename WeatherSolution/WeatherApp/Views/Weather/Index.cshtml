@{
    ViewBag.Title = "Index";
}
<div style="float:right; margin-top:3%">
    @Html.ActionLink("Sign out", "SignOut", "Accounts", null, new { @class = "btn btn-primary" })
</div>
<br />
<br />
<form onsubmit="getData(event)" class="form-inline">
    <input id="searchbox" type="text" class="form-control" value="" placeholder="City name" />
    <input id="submitButton" type="submit" name="SearchBox" value="Search" class="btn btn-success" />
</form>
<br />
<br />
<div class="flex-container" style="margin-left:3%">
    <h3 class="cardrow" id="name"> </h3>
    <h3 class="cardrow" id="country"> </h3>
    <h3 class="cardrow" id="population"> </h3>
</div>
<div id="maindiv" class="flex-container" style="padding-bottom:10%; margin-bottom:20%">
</div>
<div class="hiddenDiv" hidden="hidden">
    <div class="panel panel-danger">
        <div class="panel-body"> 5-days weather temperature shows you temperature on each 3 hours visualy.</div>
</div>
</div>
<div class="flex-container">
    <canvas id="weatherChart" style="height:400px; width:900px;margin-bottom:10%"></canvas>
</div>
<div class="hiddenDiv" hidden="hidden">
    <div class="panel panel-success">
        <div class="panel-body"> Feel free to experiment with our interactive map. Check some options like clouds, rain and snow in our map menu.</div>
    </div>
</div>
<div id="mapDiv" style="position:relative;">
    <div id="map" class="mapClass" style="margin:20%;margin-top:0%"></div>
</div>