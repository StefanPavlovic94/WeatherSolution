@model WeatherApp.Account

@{
    ViewBag.Title = "Sign in";
}

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-warning" style="margin-left:15%;margin-right:30%; margin-top:3%; align-content:center; font-family:'Segoe UI'">
        <button type="button" class="btn btn-danger" data-dismiss="alert" style="float:right">×</button>
        @Html.ValidationSummary(true)
    </div>
}
@using (Html.BeginForm("Index", "Accounts", new { Model }, FormMethod.Post))
{
    <div style="margin-left:30%; margin-top:10%; margin-bottom:5%; font-family:'Segoe UI'">
        @Html.AntiForgeryToken()
        <div>
            <h5>Username</h5>
            <div>
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Username" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <h5>Password</h5>
            <div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <input style="margin-top:2%" type="checkbox" onclick="tooglePass()">Show Password
        <div class="btn-toolbar" style="margin-top:1%; margin-bottom:50%; font-family:'Segoe UI'">
            <input style="margin-right:10%" type="submit" value="Sign in" class="btn btn-primary btn-md" />
            <br />
            <br />
            <br />
            <h5><b>You dont have account? No problem.</b></h5>
            @Html.ActionLink("Sign up", "SignUp", "Accounts", null, new { @class = "btn btn-success", @style = "margin-right:4%" })
            or
            @Html.ActionLink("Sign in as guest", "SignInAsGuest", "Accounts", null, new { @class = "btn btn-default", @style = "margin-left:4%" })
        </div>
    </div>
}

